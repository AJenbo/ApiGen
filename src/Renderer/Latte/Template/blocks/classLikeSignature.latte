{varType ApiGenX\Renderer\Latte\Template\GlobalParameters $global}

{define classLikeSignature, ApiGenX\Info\ClassLikeInfo $classLike}
	{include classLikeLink, $classLike}

	{if $classLike->interface && $classLike->extends}
		extends
		{foreach $classLike->extends as $extends => $_}
			{include classLikeLink, $global->index->classLike[$extends]}{sep}, {/sep}
		{/foreach}
	{/if}

	{if $classLike->class && $classLike->implements}
		implements
		{foreach $classLike->implements as $implements => $_}
			{include classLikeLink, $global->index->classLike[$implements]}{sep}, {/sep}
		{/foreach}
	{/if}

	{if $classLike->class && $classLike->uses}
		uses
		{foreach $classLike->uses as $trait => $_}
			{include classLikeLink, $global->index->classLike[$trait]}{sep}, {/sep}
		{/foreach}
	{/if}
{/define}
