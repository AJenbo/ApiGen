{varType ApiGenX\Renderer\Latte\Template\GlobalParameters $global}

{define classLikeRelated, ApiGenX\Info\ClassLikeInfo $classLike}
	{if isClass($classLike)}
{*		{embed classLikeRelatedGroup, $global->index->classExtends[$classLike->name->fullLower] ?? []}*}
{*			{define title}Direct known subclasses{/define}*}
{*		{/embed}*}

{*		{embed classLikeRelatedGroup, $classLike->indirectDescendants($global->index)}*}
{*			{define title}Indirect known subclasses{/define}*}
{*		{/embed}*}

	{elseif isInterface($classLike)}
{*		{embed classLikeRelatedGroup, $global->index->classImplements[$classLike->name->fullLower] ?? []}*}
{*			{define title}Direct known implementers{/define}*}
{*		{/embed}*}

{*		{embed classLikeRelatedGroup, $global->index->instanceOf[$classLike->name->fullLower] ?? []}*}
{*			{define title}Indirect known implementers{/define}*}
{*		{/embed}*}

	{elseif isTrait($classLike)}
		{embed classLikeRelatedGroup, $global->index->classUses[$classLike->name->fullLower] ?? []}
			{block title}Direct Known Users{/block}
		{/embed}

		{embed classLikeRelatedGroup, $classLike->indirectUses($global->index)}
			{block title}Indirect Known Users{/block}
		{/embed}
	{/if}
{/define}
