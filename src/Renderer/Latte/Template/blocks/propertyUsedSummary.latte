{varType ApiGenX\Renderer\Latte\Template\GlobalParameters $global}

{define propertyUsedSummary, ApiGenX\Info\ClassLikeInfo $classLike, array $overriden}
	{if isClass($classLike)}
		{if $classLike->extends}
			{include propertyUsed, $global->index->classLike[$classLike->extends->fullLower], $overriden + $classLike->properties}
		{/if}

		{foreach $classLike->uses as $use}
			{include propertyUsed, $global->index->classLike[$use->fullLower], $overriden + $classLike->properties}
		{/foreach}

	{elseif isInterface($classLike)}
		{foreach $classLike->extends as $parent}
			{include propertyUsed, $global->index->classLike[$parent->fullLower], $overriden + $classLike->properties}
		{/foreach}

	{elseif isTrait($classLike) || isEnum($classLike)}
		{foreach $classLike->uses as $use}
			{include propertyUsed, $global->index->classLike[$use->fullLower], $overriden + $classLike->properties}
		{/foreach}
	{/if}
{/define}
